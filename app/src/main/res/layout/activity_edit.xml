<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/editImageView"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_weight="50"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:srcCompat="@drawable/image_icon" />

            <EditText
                android:id="@+id/editTxtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp"
                android:textSize="26dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:padding="15dp"
                android:text="Categories:"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinnerCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:padding="15dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:padding="15dp"
                android:text="Colors: "
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinnerColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:padding="15dp" />

            <EditText
                android:id="@+id/editTextAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:ems="10"
                android:hint="age"
                android:inputType="number"
                android:padding="15dp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextPhoneNumb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:ems="10"
                android:hint="Phone Number"
                android:inputType="number"
                android:padding="15dp"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/editSex"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sex: "
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/editMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Male"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/editFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Female"
                    android:textSize="20sp" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/editType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type:"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/editGive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Give"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/editAdapt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Adapt"
                    android:textSize="20sp" />
            </RadioGroup>

            <Button
                android:id="@+id/editSaveChanges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:backgroundTint="#4CAF50"
                android:padding="15dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Save Changes"
                android:textSize="20sp" />

            <Button
                android:id="@+id/editDiscardChanges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:backgroundTint="#F44336"
                android:padding="15dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Discard Changes"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>